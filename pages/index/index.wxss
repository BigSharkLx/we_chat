/**index.wxss**/
swiper{
width: 100%;
height: 400rpx;
}
swiper-item image {
  width: 100%;
  height: 400rpx;
}
.index-middle{
  display: flex;
  flex-direction: column;
}
.index-middle-title{
padding: 10px 20px;
font-size: 34rpx;
color: #333;
background-color: #efefef;
}
.index-middle-item{
  position: relative;
  border: 1px solid #ececec;
  margin-bottom: 15px;
  padding: 10px;
  background:#F1FAFA;
}
.item-name{
  font-size: 32rpx;
  color: #333;
  float: left;
}
.item-date{
  float: right;
  font-size: 28rpx;
  color: #2d2d2d;
}
.item-message{
  margin: 26rpx 0;
  font-size:26rpx;
  color: #2d2d2d;
}
.item-img{
  top: 30px;
  position: absolute;
  right: 10px;
  width: 100px;
  max-height: 70px;
}
.index-love-img{
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.item-img-service {
  top: 10px;
  position: absolute;
  right: 10px;
  width: 100px;
  max-height: 70px;
}
.no-focus{
text-align: center;
font-size: 28rpx;
color: #666;
margin-top: 20rpx;
}
.focusMe{
  margin-top: 20rpx;
  height: 40px;
  line-height: 40px;
  width: 220rpx;
}