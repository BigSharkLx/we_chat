page {
  width: 100%;
  height: 100%;
  background-color: #eceff4;
}

.container {
  padding-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.truepaas-img {
  height: 50px;
  margin: 0 auto;
}

.login-text {
  margin: 0 auto;
  margin-top: 5px;
  font-size: 32rpx;
  color: #333;
}

.login-form {
  padding: 80rpx;
}

.login-logo-img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  float: left;
}

.login-form input {
float:right;
padding-left:5rpx;
margin-bottom:70rpx;
height:38px;
width:450rpx;
font-size:28rpx;
border-bottom:1px solid #1694d5;
padding-right:60rpx;
}

.login-button {
  height: 40px;
  line-height: 40px;
  background-color: #1694d5;
  color: #fff;
  width: 525rpx;
  margin-left: 60rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 10rpx;
}
.main-input{
position: relative;
}
.login-clear{
width:30rpx;
height:30rpx;
position:absolute;
top:30rpx;
right:10rpx;
}