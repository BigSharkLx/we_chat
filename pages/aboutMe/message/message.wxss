page{
  width: 100%;
}
.message-container{
  position: relative;
}
.space-bottom {
  padding: 22rpx;
  border-bottom: 1px solid #efefef;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 100;
  background-color: #efefef;
}
.tab-item-resource{
 position: absolute;
 top: 100rpx;
}
.tab-item {
font-size:30rpx;
color:#333;
padding-bottom:10rpx;
width:120rpx;
display:inline-block;
margin:0 65rpx;
}
.tab-item-active {
  border-bottom: 2px solid #36b5de;
  color: #36b5de;
}
.item-container{
  border-top: 1px solid #ececec;
}
.item-message-container{
  padding: 20rpx;
}
.item-date{
  font-size: 28rpx;
  color: #666;
}
.item-content{
  color: #333;
  font-size: 26rpx;
  word-break: break-all;
  margin: 10rpx 0;
}
.item-toDetail{
  font: 28rpx;
  padding: 20rpx;
  color: #36b5de;
  border-bottom: 1px solid #ececec;
}
.finished{
text-align: center;
font-size: 24rpx;
margin: 10rpx 0;
color: #666;
}