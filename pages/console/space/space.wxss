page{
  width: 100%;
}
.container {
  display: flex;
  flex-direction: column;
}

.space-top {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #efefef;
}

.progress {
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
  align-items: center;
}

.progress-title {
  margin-left: 10rpx;
  margin-right: 30rpx;
}

progress {
  width: 400rpx;
  margin-right: 30rpx;
}

.progress-number {
  color: #36b5de;
}

.space-middle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1px solid #efefef;
}

.count-number {
  font-size: 30rpx;
}

.total {
  color: #333;
}

.count-text {
  font-size: 28rpx;
}

.space-bottom {
  padding: 20rpx;
  border-bottom: 1px solid #efefef;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-around;
}

.tab-item {
  font-size: 30rpx;
  color: #333;
  padding-bottom: 10rpx;
}

.tab-item-active {
  border-bottom: 2px solid #36b5de;
  color: #36b5de;
}

.index-middle-item {
  position: relative;
  border: 1px solid #ececec;
  margin-bottom: 15px;
  padding: 10px 10px 0 10px;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  float: left;
}

.item-message {
  margin: 16rpx 0;
  font-size: 26rpx;
  color: #2d2d2d;
}

.item-img {
  top: 30px;
  position: absolute;
  right: 10px;
  width: 100px;
  max-height: 70px;
}

.item-img-service {
  top: 30px;
  position: absolute;
  right: 10px;
  width: 100px;
  max-height: 70px;
}

.tab-item-user {
  display: flex;
  flex-direction: column;
}

.user-item {
  display: inline-flex;
  flex-direction: row;
  border-bottom: 1px solid #efefef;
}

.user-item>view {
  text-align: center;
    padding: 20rpx 10rpx;
  border-left: 1px solid #ececec;
  border-right: 1px solid #ececec;
  width: 20%;
}
.user-item>view.user-big {
  padding: 20rpx 10rpx;
  width: 40%;
  overflow: hidden;
}
.user-item-name {
  font-size: 20rpx;
  color: #2d2d2d;
  width: 88%;
   overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}

.user-item>view image {
  width: 30rpx;
  height: 30rpx;
}
.user-title{
background:#efefef;
}
.item-desc{
word-break: break-all;
max-width: 500rpx;
display: block;
}
